{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./out"
  },
  "exclude": [
    "node_modules",
    "build/**/*"
  ],
  "include": [
    "src/**/*.ts"
  ]
}